{
	"name": "void-driller",
	"version": "1.0.1",
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": "./server/index.js"
	},
	"description": "Retro sci-fi mining game where you pilot a modular drill rig through procedurally generated asteroids, extracting rare minerals while surviving environmental hazards and alien encounters.",
	"license": "GPL-3.0-or-later",
	"browserslist": [
		"last 1 version",
		"> 1%",
		"not dead",
		"not op_mini all"
	],
	"scripts": {
		"prepare": "bun run build",
		"build": "bun run build:clean && bun run client/build.js",
		"build:clean": "rm -rf ./client/build/",
		"build:watch": "bun run build -- --watch",
		"db:clean": "rm -f ~/.void-driller.json",
		"start": "NODE_ENV=production bun server/index.js",
		"dev": "NODE_ENV=development bun --hot server/index.js",
		"dev:clean": "bun run db:clean && bun run dev",
		"lint": "bun --bun eslint",
		"lint:fix": "bun --bun eslint --fix",
		"format": "bun run lint:fix && bun --bun prettier --write .",
		"version": "npm version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fatlard1993/void-driller.git"
	},
	"bugs": {
		"url": "https://github.com/fatlard1993/void-driller/issues"
	},
	"homepage": "https://github.com/fatlard1993/void-driller#readme",
	"dependencies": {
		"argi": "github:fatlard1993/argi#785979e",
		"emoji-js": "^3.8.1",
		"log": "github:fatlard1993/log#e0d55f6",
		"lowdb": "^7.0.1",
		"marked": "^16.3.0",
		"nanoid": "^5.1.5",
		"phaser": "^3.90.0",
		"vanilla-bean-components": "github:fatlard1993/vanilla-bean-components#fd7c5fa"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@happy-dom/global-registrator": "^18.0.1",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.6.4",
		"bun-types": "^1.2.20",
		"eslint": "^9.33.0",
		"eslint-plugin-compat": "^6.0.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^54.0.0",
		"eslint-plugin-spellcheck": "0.0.20",
		"eslint-plugin-testing-library": "^7.6.6",
		"eslint-plugin-unicorn": "^60.0.0",
		"eslint-plugin-write-good-comments": "^0.2.0",
		"globals": "^16.3.0",
		"prettier": "3.6.2"
	}
}
